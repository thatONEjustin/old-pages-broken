---
const { item } = Astro.props;
---

<li>
  <a href={item.url}>
    <i class={`text-lg nf ${item.icon} pr-1`}></i>
    {item.label}
  </a>
</li>

<style lang="tailwind">
li {
  @apply border-r-[1px] border-darker pr-3 mr-3 last:mr-0;

  a {
    @apply relative text-darker;
    
    &::after {
      @apply absolute bottom-0 left-0;
      content: '';
      @apply h-[2px] w-0 bg-darker origin-center transition-all;
    }
  }
}
</style>
